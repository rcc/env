# e environment
if [ "$INTERACTIVE_LOGIN" -eq "1" ]; then
	# configure e
	unset EPROJECT
	eval "$(~/.e/e.py init)"

	# show EPROJECT in prompt
	if [ "$TERM" != "dumb" ]; then
		export PS1="\[\033[00;32m\]\u@\h \[\033[00;33m\]\$EPROJECT \[\033[00;36m\]\w\n\[\033[00m\]\360\237\215\224  "
	else
		export PS1="\$EPROJECT \w \$ "
	fi
fi

ws () {
	es ${1} ${2:-w${1}} "$(pwd)"
}

# vim:filetype=sh
