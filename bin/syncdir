#!/bin/bash

# color constants
NO="\033[0m"
BR="\033[30m"
RD="\033[31m"
GR="\033[32m"
YL="\033[33m"
BL="\033[34m"
MG="\033[35m"
CY="\033[36m"

# exit command
error_exit () {
    echo -e "${RD}$*${NO}" 1>&2
    exit 1
}

usage () {
	echo "syncdir <destination>"
	echo "  Run syncdir from the directory you want to synchronize."
	echo "  Examples:"
	echo "    syncdir rcc@server"
	echo "    syncdir server"
}

# handle options
SYNCBACK=1
DELETE=
while [ "${1:0:1}" == "-" ]; do
	if [ "${1}" == "--pushonly" ]; then
		echo -e "${GR}OPT: ${CY}${1}${NO}"
		SYNCBACK=0
	fi
	if [ "${1}" == "--delete" ]; then
		echo -e "${GR}OPT: ${CY}${1}${NO}"
		DELETE="--delete"
		SYNCBACK=0
	fi
	shift
done

DEST="$1"

# Check Arguments
if [ -z "$1" ]; then
	usage
	error_exit "Invalid Usage"
fi

# Get source from PWD
SRC="$(pwd)"
# Turn source into generic based on HOME
ROOT=~
GSRC=$(echo $SRC | sed -n -e "s;$ROOT;\~;p")
if [ -z "$GSRC" ]; then
	GSRC="$SRC"
fi

echo -e "Source: ${CY}${GSRC}${NO}"

# escaped GSRC
EGSRC="$(echo $GSRC | sed -e 's/ /\\ /g')"

# Sync To
ssh "${DEST}" mkdir -p "${EGSRC}" || \
	error_exit "Error creating destination directory"
rsync -vrulpzc $DELETE ./ "${DEST}":"${EGSRC}" || \
	error_exit "Error syncing to destination"
echo -e "${GR}Sync To Complete${NO}"

# Sync Back
if [ "$SYNCBACK" -eq "1" ]; then
	rsync -vrulpzc "${DEST}":"${EGSRC}/" . || \
		error_exit "Error syncing From destination"
	echo -e "${GR}Sync From Complete${NO}"
fi
