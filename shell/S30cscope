export CSCOPE_EDITOR=$GEDITOR

setscope () {
    find . -type f \( -name '*.c' -o -name '*.cpp' -o -name '*.m' -o -name '*.mm' -o -name '*.h' \) > cscope.files
    cscope -Rkb $*
    export CSCOPE_DB="$(pwd)/cscope.out"
    export CSCOPE_DB_PREPATH="$(pwd)"
}

scopeit () {
	if [ "$GEDITOR" == "mvim" -o "$GEDITOR" == "gvim" ]; then
		setscope && $GEDITOR -c 'call ConfigCScope()' -c 'NERDTree'
	else
		setscope && $GEDITOR .
	fi
}

# XXX: Very vim specific
rsc () {
    if [ "$#" == "0" ]; then
        ${GVIM} -c 'edit .' -c 'set buftype=nofile' \
            -c 'call ConfigCScope()'
    elif [ "$#" == "1" ]; then
        ${GVIM} -c 'call ConfigCScope()' -c "cs find g $*"
    else
        ${GVIM} -c 'call ConfigCScope()' -c "cs find $*"
    fi
}

# vim:filetype=sh
